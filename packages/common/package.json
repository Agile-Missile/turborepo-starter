{
  "name": "@agile/common",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "./bin/",
    "./dist/",
    "./index.js"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.build.json",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "clean": "rimraf --no-glob ./dist ./turbo ./coverage ./__data__ ./config/__data__ ./_release ./tsconfig.tsbuildinfo",
    "lint": "eslint . --cache --cache-location ../../.cache/eslint/forge.eslintcache",
    "test": "run-s test-unit",
    "test-task": "vitest run",
    "test-coverage": "vitest run --coverage",
    "test-unit": "vitest run --passWithNoTests",
    "test-watch": "vitest watch --ui",
    "fix-all-files": "eslint . --fix",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@hyperse/eslint-config-hyperse": "^1.4.4",
    "@types/node": "22.15.19",
    "@vitest/coverage-istanbul": "3.1.3",
    "@vitest/ui": "3.1.3",
    "eslint": "^9.27.0",
    "npm-run-all": "4.1.5",
    "rimraf": "6.0.1",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}
