{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "preserve",
    "allowJs": false,
    "noImplicitAny": true,
    "noEmit": false,
    "incremental": true,
    "paths": {},
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
